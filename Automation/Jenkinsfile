pipeline {
    agent any

    tools {
        maven 'M3'
        jdk 'jdk21'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Badarinath15122001/Capstone-NopCommerce.git'
            }
        }

        stage('Auto Commit to GitHub') {
            steps {
                dir('Automation') {
                    withCredentials([usernamePassword(credentialsId: 'capstone', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                        bat '''
                            git config user.name "Jenkins"
                            git config user.email "jenkins@yourdomain.com"
                            git add .
                            git commit -m "Auto commit by Jenkins" || echo "No changes to commit"
                            git push https://%GIT_USER%:%GIT_PASS%@github.com/Badarinath15122001/Capstone-NopCommerce.git HEAD:master
                        '''
                    }
                }
            }
        }

        stage('Build and Run Single Test') {
            steps {
                dir('Automation') {
                    echo 'Running only LoginTest...'
                    bat 'mvn -Dtest=tests.LoginTest test'
                }
            }
        }

        stage('Publish Reports') {
            steps {
                dir('Automation') {
                    echo 'Publishing HTML reports...'

                    publishHTML(target: [
                        reportDir: 'test-output',
                        reportFiles: 'emailable-report.html',
                        reportName: 'TestNG Report'
                    ])

                    publishHTML(target: [
                        reportDir: 'reports/ExtentReports',
                        reportFiles: 'ExtentReport_*.html',
                        reportName: 'Extent Report'
                    ])
                }
            }
        }
    }

    post {
        always {
            dir('Automation') {
                archiveArtifacts artifacts: '/Screenshots/*.png', allowEmptyArchive: true
            }
        }
    }
}