pipeline {
    agent any
    environment {
        PATH = "C:\\WebDrivers\\ChromeDriver;${env.PATH}"  // your driver path
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean install -DskipTests'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
        }
    }
    post {
        always {
            // Publish TestNG reports
            testngPublisher testNGResults: 'Automation/target/surefire-reports/testng-results.xml', 
                             allowMissing: false
        }
    }
}
