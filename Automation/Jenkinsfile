pipeline {
    agent any

    tools {
        jdk 'jdk21'      // update with your exact JDK name
        maven 'M3'       // update with your exact Maven name
    }

    environment {
        MAVEN_OPTS = "-Xmx2048m"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('Automation') {   // ðŸ‘ˆ Go into Automation folder
                    echo "Building project with Maven..."
                    bat 'mvn -B -DskipTests clean package'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('Automation') {   // ðŸ‘ˆ Stay inside Automation folder
                    echo "Running TestNG + Cucumber tests..."
                    bat 'mvn -B test'
                }
            }
            post {
                always {
                    junit 'Automation/target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: 'Automation/reports/ExtentReports/*.html', fingerprint: true
                    archiveArtifacts artifacts: 'Automation/target/cucumber-reports/*.html', fingerprint: true
                }
            }
        }
    }
}
